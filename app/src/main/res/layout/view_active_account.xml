<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/active_account_container"
    android:layout_width="match_parent"
    android:layout_height="180dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_drawer_image_height"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:src="@drawable/paper_image"/>

    <ImageView
        android:src="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="sans-serif-medium"
                android:text="@string/anonymous"
                android:textSize="14sp"
                android:id="@+id/active_account_username"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif"
                android:text="@string/not_logged_in"
                android:textSize="14sp"
                android:id="@+id/active_account_email"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_navigation_expand_more_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
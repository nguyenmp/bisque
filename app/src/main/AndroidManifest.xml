<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ninja.mpnguyen.bisque">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">
        <activity android:name=".activities.PostsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.StoryActivity" android:parentActivityName=".activities.PostsActivity" />
        <activity android:name=".activities.UserActivity" android:parentActivityName=".activities.PostsActivity" />
    </application>

</manifest>
